# 服务配置
SERVICE_NAME=menu-service
SERVICE_PORT=3201
SERVICE_HOST=0.0.0.0
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=menu_service_db
DB_DIALECT=mysql

# Redis配置 (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# CORS配置
CORS_ORIGIN=*

# API配置
API_PREFIX=/api
REQUEST_LIMIT=10mb
