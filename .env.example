# YYC³餐饮行业智能化平台 - 环境变量配置模板

# ===========================================
# 应用配置
# ===========================================
NODE_ENV=development
PORT=8080
HOST=localhost

# 应用密钥（生产环境请使用强密码）
APP_SECRET=your-super-secret-app-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# ===========================================
# 数据库配置
# ===========================================
# PostgreSQL 主数据库
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yyc3_my
DB_USER=yyc3
DB_PASSWORD=yyc3_my
DB_SSL=false

# 数据库连接池配置
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Redis 缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=yyc3:

# ===========================================
# AI 服务配置
# ===========================================
# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229

# 本地AI模型配置
LOCAL_AI_MODEL_PATH=./models
LOCAL_AI_ENABLED=true
LOCAL_AI_GPU_ENABLED=false

# ===========================================
# 第三方服务配置
# ===========================================
# 支付服务配置
WECHAT_PAY_APP_ID=your-wechat-app-id
WECHAT_PAY_MCH_ID=your-wechat-mch-id
WECHAT_PAY_KEY=your-wechat-pay-key
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key

# 短信服务配置
SMS_ACCESS_KEY_ID=your-sms-access-key
SMS_ACCESS_KEY_SECRET=your-sms-secret
SMS_SIGN_NAME=YYC3餐饮
SMS_TEMPLATE_CODE=SMS_123456789

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 文件存储配置
OSS_ACCESS_KEY_ID=your-oss-access-key
OSS_ACCESS_KEY_SECRET=your-oss-secret
OSS_BUCKET=yyc3-catering-files
OSS_REGION=oss-cn-beijing

# ===========================================
# 微服务配置
# ===========================================
# API网关
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=0.0.0.0

# 各服务端口配置
AI_ASSISTANT_PORT=8081
SMART_KITCHEN_PORT=8082
O2O_SYSTEM_PORT=8083
CHAIN_STORE_PORT=8084
FOOD_SAFETY_PORT=8085
INTELLIGENT_COLLABORATION_PORT=8086
INTELLIGENT_OPERATION_PORT=8087

# ===========================================
# 消息队列配置
# ===========================================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=yyc3-catering-platform
KAFKA_GROUP_ID=yyc3-group

# RabbitMQ 配置（备选）
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE=yyc3-queue

# ===========================================
# 监控和日志配置
# ===========================================
# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 监控配置
METRICS_PORT=9090
HEALTH_CHECK_PORT=8081

# Jaeger 链路追踪
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=yyc3-catering-platform

# Prometheus 配置
PROMETHEUS_PORT=9090

# ===========================================
# 安全配置
# ===========================================
# CORS 配置
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173
CORS_CREDENTIALS=true

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 文件上传限制
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# 业务配置
# ===========================================
# 默认餐厅配置
DEFAULT_RESTAURANT_ID=default
DEFAULT_RESTAURANT_NAME=YYC³智餐厅
DEFAULT_TIMEZONE=Asia/Shanghai
DEFAULT_CURRENCY=CNY

# 配送配置
DEFAULT_DELIVERY_FEE=5.00
FREE_DELIVERY_THRESHOLD=50.00
MAX_DELIVERY_DISTANCE=10

# 预约配置
MAX_ADVANCE_BOOKING_DAYS=30
MIN_BOOKING_NOTICE_HOURS=1
AUTO_CONFIRM_RESERVATION=true

# ===========================================
# 开发环境配置
# ===========================================
# 开发模式配置
DEV_MOCK_AI=false
DEV_MOCK_PAYMENT=true
DEV_MOCK_SMS=true
DEV_MOCK_EMAIL=true

# 调试配置
DEBUG_SQL=false
DEBUG_REQUESTS=false
DEBUG_AI_RESPONSES=false

# 热重载配置
HOT_RELOAD=true
LIVE_RELOAD=true

# ===========================================
# 生产环境配置
# ===========================================
# 生产环境特定配置
PRODUCTION_SSL=true
PRODUCTION_COMPRESSION=true
PRODUCTION_CACHE=true

# 集群配置
CLUSTER_WORKERS=0
CLUSTER_MAX_MEMORY=1024

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# 测试配置
# ===========================================
# 测试数据库
TEST_DB_NAME=yyc3_catering_test
TEST_REDIS_DB=1

# 测试API密钥
TEST_OPENAI_API_KEY=test-key
TEST_SMS_ACCESS_KEY=test-key

# ===========================================
# 功能开关
# ===========================================
# 功能开关配置
ENABLE_AI_ASSISTANT=true
ENABLE_VOICE_RECOGNITION=true
ENABLE_IMAGE_ANALYSIS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_MULTI_TENANT=true
ENABLE_O2O=true
ENABLE_CHAIN_STORE=true
ENABLE_FOOD_SAFETY=true

# 实验性功能
ENABLE_BETA_FEATURES=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_PREDICTIVE_AI=false